<Layout::Text text-l text-f>
	<h3><code>SELECT</code></h3>
	<Code @name="docs-surrealql-statements-select-syntax.typescript" text="SQL Syntax">
		SELECT @projections
			FROM @targets
			[ WHERE @condition ]
			[ SPLIT [ AT ] @splits ]
			[ GROUP [ BY ] @groups ]
			[ ORDER [ BY ] @orders ]
			[ LIMIT [ BY ] @limit ]
			[ START [ AT ] @start ]
			[ FETCH @fetches ]
			[ TIMEOUT @timeout ]
			[ PARALLEL ]
		;
	</Code>
</Layout::Text>

<Layout::Gap small />

<Layout::Text text-l text-f>
	<h3><code>INSERT</code></h3>
	<Code @name="docs-surrealql-statements-insert-syntax.typescript" text="SQL Syntax">
		INSERT [ IGNORE ] INTO @what
			[ @value
			  | (@fields) VALUES (@values)
			    [ ON DUPLICATE KEY UPDATE @field = @value ... ]
			]
		;
	</Code>
</Layout::Text>

<Layout::Gap small />

<Layout::Text text-l text-f>
	<h3><code>CREATE</code></h3>
	<Code @name="docs-surrealql-statements-create-syntax.typescript" text="SQL Syntax">
		CREATE @what
			[ CONTENT @value
			  | REPLACE @value
			  | MERGE @value
			  | PATCH @value
			  | SET @field = @value ...
			]
			[ OUTPUT @projections ]
			[ TIMEOUT @timeout ]
			[ PARALLEL ]
		;
	</Code>
</Layout::Text>

<Layout::Gap small />

<Layout::Text text-l text-f>
	<h3><code>UPDATE</code></h3>
	<Code @name="docs-surrealql-statements-update-syntax.typescript" text="SQL Syntax">
		UPDATE @what
			[ CONTENT @value
			  | REPLACE @value
			  | MERGE @value
			  | PATCH @value
			  | SET @field = @value ...
			]
			[ WHERE @condition ]
			[ OUTPUT @projections ]
			[ TIMEOUT @timeout ]
			[ PARALLEL ]
		;
	</Code>
</Layout::Text>

<Layout::Gap small />

<Layout::Text text-l text-f>
	<h3><code>RELATE</code></h3>
	<Code @name="docs-surrealql-statements-relate-syntax-out.typescript" text="SQL Syntax">
		RELATE @from -> @table -> @with
			[ CONTENT @value
			  | REPLACE @value
			  | MERGE @value
			  | PATCH @value
			  | SET @field = @value ...
			]
			[ OUTPUT @projections ]
			[ TIMEOUT @timeout ]
			[ PARALLEL ]
		;
	</Code>
</Layout::Text>

<Layout::Gap small />

<Layout::Text text-l text-f>
	<h3><code>DELETE</code></h3>
	<Code @name="docs-surrealql-statements-delete-syntax.typescript" text="SQL Syntax">
		DELETE @what
			[ WHERE @condition ]
			[ OUTPUT @projections ]
			[ TIMEOUT @timeout ]
			[ PARALLEL ]
		;
	</Code>
</Layout::Text>

