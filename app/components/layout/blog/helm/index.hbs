<helm>

	<div>

		<Link @link="blog.index">
			<i class="fas fa-arrow-left"></i> <span>Show all posts</span>
		</Link>

	</div>

	<nav>
		<a {{on "click" (scroll-to top=0 smooth=true)}}>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" preserveAspectRatio="none"><path d="M 8 0 v 0 16"></path></svg>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><polygon points="2.4,4.7 2.4,11.3 8,14.5 13.6,11.3 13.6,4.7 8,1.5 "/></svg>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><polygon points="5,6.2 5,9.8 8,11.5 11,9.8 11,6.2 8,4.5 "/></svg>
			{{@model.title}}
		</a>
		{{#each this.headings as |heading|}}
			<a {{on "click" (scroll-into-view heading.link smooth=true)}}>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" preserveAspectRatio="none"><path d="M 8 0 v 0 16"></path></svg>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><polygon points="2.4,4.7 2.4,11.3 8,14.5 13.6,11.3 13.6,4.7 8,1.5 "/></svg>
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><polygon points="5,6.2 5,9.8 8,11.5 11,9.8 11,6.2 8,4.5 "/></svg>
				{{heading.text}}
			</a>
		{{/each}}
	</nav>

	<div>

		<Signup bordered thicker>
			<i class="fal fa-envelope"></i> <span>Subscribe</span>
		</Signup>

	</div>

</helm>