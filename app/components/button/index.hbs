{{#if (begs-with @link "https://")}}
	<a href={{@link}} rel="noopener noreferrer" target="_blank" button ...attributes>
		<div>
			{{#if (has-block)}}
				{{yield}}
			{{else}}
				{{@text}}
			{{/if}}
		</div>
	</a>
{{else}}
	<LinkTo @route={{@link}} button ...attributes>
		<div>
			{{#if (has-block)}}
				{{yield}}
			{{else}}
				{{@text}}
			{{/if}}
		</div>
	</LinkTo>
{{/if}}